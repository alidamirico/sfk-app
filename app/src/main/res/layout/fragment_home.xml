<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/testGetD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="امروز 12 اردیبهشت 1402 و ساعت 22:20"
        android:layout_marginTop="15dp"
        android:textColor="#D3262B30"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/ac_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testGetD">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testGetD">

            <TextView
                android:id="@+id/last_acv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="فعالیت های اخیر با شماره سیستم:"
                android:textColor="#D3262B30"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/showNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.3"
                android:padding="16dp"
                android:text="09178680115"
                android:textColor="#D3262B30"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/goSetNum"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonbg"
                android:text="شماره سیستم را وارد کنید ( کلیک کنید)"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:backgroundTint="#00FFFFFF"
                app:backgroundTintMode="src_atop" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/ac_bg2"
            android:padding="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count_receive"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/count_bg_left"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:text="جواب های دریافتی: \n 0 عدد" />
            <TextView
                android:id="@+id/count_sent"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/count_bg"
                android:padding="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:text="دستورات ارسالی : \n 0 عدد" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testGetD">

            <TextView
                android:id="@+id/last_receive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/bg_send_message"
                android:padding="16dp"
                android:gravity="center"
                android:text="لطفا آپدیت کنید" />

            <TextView
                android:id="@+id/last_sent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/bg_receive_message"
                android:maxWidth="250dp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/white"
                android:text="لطفا آپدیت کنید"/>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>